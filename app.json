          {
            "name": "eta_start",
            "type": "string",
            "title": {
              "en": "eta begin"
            },
            "example": "20:05"
          },
          {
            "name": "eta_end",
            "type": "string",
            "title": {
              "en": "eta end"
            },
            "example": "21:05"
          },
          {
            "name": "eta_date",
            "type": "string",
            "title": {
              "en": "eta date"
            },
            "example": "2023-03-28"
          }
        ]
      }
